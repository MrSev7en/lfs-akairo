{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "#package": ["./package.json"],
      "#classes/*": ["./src/classes/*"],
      "#core/*": ["./src/core/*"],
      "#managers/*": ["./src/managers/*"],
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
